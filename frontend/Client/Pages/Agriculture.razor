    /// <summary>
    /// Get rain warning message for a specific crop based on rain data in crop object
    /// </summary>
    private string GetRainWarning(CropInfo crop, WeatherInfo? weather)
    {
        if (crop.WaterRequirementMmPerWeek == null)
            return "";

        // Parse rain values from crop object (now comes from GetCropsByCity)
        var rain1h = ParseRainValue(crop.Rain_1h);
        var rain3h = ParseRainValue(crop.Rain_3h);
        
        // Calculate daily water requirement (weekly requirement / 7)
        var dailyRequirement = crop.WaterRequirementMmPerWeek.Value / 7.0;
        
        // Check for excessive rain (1-hour rain exceeds daily requirement)
        if (rain1h > dailyRequirement && rain1h > 5) // Minimum 5mm to be considered significant
        {
            if (crop.CurrentSeasonActivity == "HARVEST")
            {
                return "üåä Exceso de lluvia - Riesgo para cosecha";
            }
            return $"üåä Lluvia excesiva: {rain1h:F1}mm supera necesidad diaria";
        }
        
        // Check for insufficient rain
        if (rain1h == 0 && rain3h == 0)
        {
            // High water requirement crops need more attention
            if (crop.WaterRequirement == "High" || crop.WaterRequirementMmPerWeek > 50)
            {
                if (crop.CurrentSeasonActivity == "PLANTING")
                {
                    return "‚òÄÔ∏è Sequ√≠a - Riego cr√≠tico para siembra";
                }
                return "‚òÄÔ∏è Sin lluvia - Requiere riego adicional";
            }
            
            // Medium water requirement crops during any non-dormant period
            if (crop.WaterRequirement == "Medium")
            {
                if (crop.CurrentSeasonActivity == "PLANTING")
                {
                    return "üíß Condiciones secas - Riego cr√≠tico para siembra";
                }
                if (crop.CurrentSeasonActivity == "HARVEST")
                {
                    return "üíß Condiciones secas - Considere riego";
                }
                // Even during maintenance, medium-water crops need some attention
                return "üíß Sin lluvia - Monitoree humedad del suelo";
            }
        }
        
        // Check for moderate rain warnings during sensitive periods
        if (rain1h > 0 && rain1h < dailyRequirement * 0.3 && crop.CurrentSeasonActivity == "PLANTING")
        {
            return "üíß Lluvia insuficiente para siembra";
        }
        
        return ""; // No warning needed
    }

