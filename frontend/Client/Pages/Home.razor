    }

    .collapsible-header:hover {
        opacity: 0.8;
    }

    .collapse-icon {
        font-size: 1.2rem;
        font-weight: bold;
        transition: all 0.3s ease;
        background-color: rgba(255, 255, 255, 0.8);
        border: 2px solid rgba(0, 0, 0, 0.2);
        border-radius: 50%;
        width: 30px;
        height: 30px;
