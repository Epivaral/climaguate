        public DateTime SunriseDate { get; set; }
        public DateTime SunsetDate { get; set; }
        
        // UI Gradient Colors for Weather Cards
        public string? Start_Color { get; set; }
        public string? End_Color { get; set; }
    }
    
    // =============================================================================
    // COMPONENT STATE VARIABLES
    // =============================================================================
    
    /// <summary>
    /// List of available cities from the database
    /// </summary>
    private List<City> cities = new List<City>();
    
    /// <summary>
    /// Current weather data for the selected city (includes historical readings)
    /// </summary>
    private List<Weather> weatherData = new List<Weather>();
    
    /// <summary>
    /// Currently selected city code (defaults to Guatemala City)
    /// </summary>
    private string selectedCityCode = "GUA";
    
    /// <summary>
    /// Loading state for cities dropdown
    /// </summary>
    private bool isLoadingCities = false;
    
    /// <summary>
    /// Loading state for air quality data
    /// </summary>
    private bool isLoadingPollution = false;
    
    /// <summary>
    /// Loading state for location detection
    /// </summary>
    private bool isDetectingLocation = false;
    
    /// <summary>
    /// Current air quality/pollution data for selected city
    /// </summary>
    private Pollution? pollutionData;
    
    /// <summary>
    /// Error state for cities loading
    /// </summary>
    private bool citiesLoadError = false;
    
    /// <summary>
    /// Retry counter for cities loading
    /// </summary>
    private int citiesRetryCount = 0;
    
    /// <summary>
    /// Status message during cities loading
    /// </summary>
    private string citiesLoadStatus = "";
    
    /// <summary>
    /// HashSet to track which collapsible sections are currently collapsed
    /// </summary>
    private HashSet<string> collapsedSections = new HashSet<string>();
    
    // =============================================================================
    // COLLAPSIBLE SECTION CONSTANTS
    // =============================================================================
    
    /// <summary>Identifier for the detailed weather info collapsible section</summary>
    private const string WEATHER_INFO = "weatherInfo";
    
    /// <summary>Identifier for the satellite map collapsible section</summary>
    private const string SATELLITE_MAP = "satelliteMap";
    
    /// <summary>Identifier for the air quality collapsible section</summary>
    private const string AIR_QUALITY = "airQuality";
    
    /// <summary>Identifier for the weather history collapsible section</summary>
    private const string WEATHER_HISTORY = "weatherHistory";
    
    /// <summary>Identifier for the forecast chart collapsible section</summary>
    private const string FORECAST_CHART = "forecastChart";

    // =============================================================================
    // LOCATION DETECTION METHODS
    // =============================================================================
    
    private async Task DetectLocation()
    {
        try
        {
            isDetectingLocation = true;
            StateHasChanged();
            
            // Call JavaScript to get user location
            await JS.InvokeVoidAsync("getUserLocation", DotNetObjectReference.Create(this));
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Location detection error: {ex.Message}");
            isDetectingLocation = false;
            // Fallback to Guatemala City if location detection fails
            selectedCityCode = "GUA";
            await OnCityChanged(new ChangeEventArgs { Value = selectedCityCode });
        }
    }
    
    private double Haversine(double lat1, double lon1, double lat2, double lon2)
    {
        double R = 6371; // Earth radius in km
        double dLat = ToRadians(lat2 - lat1);
        double dLon = ToRadians(lon2 - lon1);
        double a = Math.Sin(dLat / 2) * Math.Sin(dLat / 2) +
                   Math.Cos(ToRadians(lat1)) * Math.Cos(ToRadians(lat2)) *
                   Math.Sin(dLon / 2) * Math.Sin(dLon / 2);
        double c = 2 * Math.Atan2(Math.Sqrt(a), Math.Sqrt(1 - a));
        return R * c;
    }
    
    private double ToRadians(double deg) => deg * Math.PI / 180.0;
    
    [JSInvokable]
    public async Task OnLocationReceived(double latitude, double longitude)
    {
        try
        {
            Console.WriteLine($"Location received: {latitude}, {longitude}");
            isDetectingLocation = false;
            
            if (cities != null && cities.Count > 0)
            {
                var closest = cities.OrderBy(c => Haversine(latitude, longitude, c.Latitude, c.Longitude)).FirstOrDefault();
                if (closest != null)
                {
                    Console.WriteLine($"Closest city found: {closest.CityName} ({closest.CityCode})");
                    selectedCityCode = closest.CityCode ?? "GUA";
                    await OnCityChanged(new ChangeEventArgs { Value = selectedCityCode });
                    await InvokeAsync(StateHasChanged);
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"OnLocationReceived error: {ex.Message}");
            isDetectingLocation = false;
            selectedCityCode = "GUA";
            await OnCityChanged(new ChangeEventArgs { Value = selectedCityCode });
        }
    }

    // =============================================================================
